</head>
<body class="p-4">

    <h2 class="mb-3">🛒 Products Table</h2>

    <table class="table table-bordered table-hover text-center">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Product Name</th>
                <th>Price ($)</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in products)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.Price</td>
                </tr>
            }
        </tbody>
    </table>

</body>
